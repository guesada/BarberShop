{
  "name": "barbershop-fullstack",
  "version": "3.0.0",
  "description": "Sistema completo de gerenciamento para barbearias - Backend Node.js + Frontend React",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:watch": "nodemon server.js",
    "build": "npm run client:build",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "dev:full": "concurrently \"npm run dev:watch\" \"npm run client\"",
    "migrate": "node src/scripts/migrate.js",
    "seed": "node src/scripts/seed.js",
    "setup": "npm run migrate && npm run seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "barbershop",
    "nodejs",
    "express",
    "mysql",
    "react",
    "appointment",
    "booking",
    "barber",
    "salon",
    "management",
    "jwt",
    "api",
    "fullstack"
  ],
  "author": {
    "name": "Leo Guesada",
    "email": "leo@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leogu/BarberShop.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.4",
    "nodemailer": "^6.9.14",
    "react-confetti": "^6.1.0",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "swagger-ui-express": "^4.6.3",
    "swagger-jsdoc": "^6.2.8",
    "morgan": "^1.10.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "react-spring": "^9.7.3",
    "supertest": "^6.3.4"
  }
}
